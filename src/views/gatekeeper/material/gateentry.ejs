<div class="row">
    <div class="col-12 attendance">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title font-weight-bold mb-4">
                    Gate Entry
                    <%= vendor ? "(Supplier Name - " +vendor.nameOfSuppliers +")" : "" %>
                </h5>
                <form action="/gatekeeper/gateentry" method="POST">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="sno">S.No</label>
                            <input type="text" class="form-control" value="<%= ge ? ge.sNo + 1 : "1" %>"
                                name="sNo" readonly placeholder="Enter S.No">
                        </div>
                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="dateofReceipt">Date of Receipt</label>
                            <input type="date" class="form-control" name="dateofReceipt">
                        </div>
                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="time">Time</label>
                            <input type="time" class="form-control" name="time" placeholder="Time">
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="row">
                                <div class="col-12">
                                    <label for="challan_billNo">Invoice No. /Challan No. & Date</label>
                                </div>
                                <div class="col-6 pr-1">
                                    <input type="text" class="form-control" name="invoiceNo"
                                        placeholder="Invoice No. & Date">
                                </div>
                                <div class="col-6 pl-1">
                                    <input type="date" class="form-control" name="invoiceNo_date">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">

                            <div class="row">
                                <div class="col-12">
                                    <label for="poNo">Po No. & Date</label>
                                </div>
                                <div class="col-6 pr-1">
                                    <input type="text" class="form-control" name="poNo" placeholder="Po No" />
                                </div>
                                <div class="col-6 pl-1">
                                    <input type="date" class="form-control" name="poNo_date">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <label for="nameAndAddress">Name And Address of
                                Seller/Consignor/Dispatcher/Sender/Party</label>
                            <textarea name="nameAndAddress" class="form-control" <%= vendor ? "readOnly" : "" %>><%= vendor ? vendor.nameOfSuppliers : "" %>,  <%= vendor ? vendor.address : "" %></textarea>
                        </div>

                        <div class="col-sm-6 mb-3">
                            <label for="nameDetailsOfArticles">Name/Details of Articles/Material</label>
                            <input type="text" class="form-control" name="nameDetailsOfArticles"
                                placeholder="Name/Details of Articles">
                        </div>

                        <div class="col-md-6 col-sm-6 mb-3">
                            <label for="">Material</label>
                            <select name="materialType" id="" class="form-control">
                                <option value="Fiber Drum">Fiber Drum</option>
                                <option value="Corogated">Corogated</option>
                                <option value="Polly Bags">Polly Bags</option>
                                <option value="GI Drum">GI Drum</option>
                                <option value="Cain">Cain</option>
                            </select>
                        </div>

                        <div class="col-md-3 col-sm-6 mb-3">
                            <label for="quantityOfDrums">Qty of drums/No. of pack</label>
                            <input type="number" class="form-control" id="quantityOfDrums" name="quantityOfDrums"
                                placeholder="Quantity of drums">
                        </div>

                        <div class="col-md-3 col-sm-6 mb-3">
                            <label for="quantity">Quantity in kg</label>
                            <input type="number" class="form-control" id="quantity" name="quantity"
                                placeholder="Quantity">
                        </div>

                        <div class="col-md-3 col-sm-6 mb-3">
                            <label for="rate">Rate(Rs.)</label>
                            <input type="number" class="form-control" id="rate" name="rate" placeholder="Rate(Rs.)">
                        </div>


                        <div class="col-md-3 col-sm-6 mb-3">
                            <label for="amount">Amount(Rs.)</label>
                            <input type="number" class="form-control" readonly id="amount" name="amount"
                                placeholder="Amount(Rs.)">
                        </div>

                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="nameOfDeliverer">Name Of Deliverer</label>
                            <input type="text" class="form-control" name="nameOfDeliverer"
                                placeholder="Name Of Deliverer">
                        </div>


                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="signOfDeliverer">Pic Of Deliverer</label>
                            <input type="file" class="form-control-file" name="picOfDeliverer" accept="image/png, image/jpeg"
                                placeholder="Sign Of Deliverer">
                        </div>

                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="driverNo">Driver of Number</label>
                            <input type="number" class="form-control" name="driverNo"
                                placeholder="Driver of Number">
                        </div>

                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="vehicleNo">Vehicle No. & Type of Vehicle</label>
                            <input type="text" class="form-control" name="vehicleNo"
                                placeholder="Vehicle No. & Type of Vehicle">
                        </div>

                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="signOfSecurity">Sign Of Security</label>
                            <input type="text" class="form-control" name="signOfSecurity"
                                placeholder="Sign Of Security">
                        </div>

                        <div class="col-md-4 col-sm-6 mb-3">
                            <label for="remarks">Remarks</label>
                            <input type="text" class="form-control" name="remarks" placeholder="Remarks">
                        </div>


                        <div class="col-12 text-center mt-4">
                            <button class="btn btn-warning px-5">Submit</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
<script>
    const qty = document.getElementById("quantity");
    const rate = document.getElementById("rate");
    let qtyValue;
    qty.addEventListener("keyup", function () {
        qtyValue = qty.value;
    });

    rate.addEventListener("keyup", function () {
        let rateValue = rate.value;
        console.log("value is", qtyValue * rateValue);
        document.getElementById("amount").value = qtyValue * rateValue;
    });
</script>