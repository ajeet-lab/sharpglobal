<div class="row">
    <div class="col-12">
        <div class="card">
            <div
                class="card-header d-flex justify-content-between align-items-center mb-0 pb-0 border-bottom border-warning border-2">
                <h4>Update Customer </h4>
            </div>
            <div class="card-body">
                <!-- Find Customer -->
                <form action="/admin/findcustomer" class="border-bottom my-3 border-2 row">
                    <div class="col-12 d-flex mb-3 justify-content-between">
                        <select name="name" id="name" class="form-control">
                            <option>Select Customer</option>
                            <option value="Test">Test</option>
                            <option value="Ajeet">Ajeet</option>
                        </select>
                        <button class="btn btn-dark ml-3 px-4">Find</button>
                    </div>
                </form>
                <!-- End Find Customer -->

                <form action="/admin/update/customer/<%= customer.name %> " class="row" method="POST">
                    <div class="col-md-12 mb-3 position-relative">
                        <input type="text" class="form-control" name="address1" id="address1"
                          value="<%= customer ? customer.address1 : ""%>"  placeholder="Enter Address 1" required>
                    </div>

                    <div class="col-md-12 mb-3">
                        <input type="text" class="form-control" name="address2" id="address2"
                        value="<%= customer ? customer.address2 : ""%>"  placeholder="Enter Address 2" required>
                    </div>

                    <div class="col-md-12 mb-3">
                        <input type="text" class="form-control" name="address3" id="address3"
                        value="<%= customer ? customer.address3 : ""%>"   placeholder="Enter Address 3" required>
                    </div>

                    <div class="col-md-4 mb-3">
                        <input type="text" class="form-control" name="country" id="country"
                        value="<%= customer ? customer.country : ""%>"   placeholder="Enter Country" required>
                        <!-- <select name="country" id="" class="form-control" required>
                            <option value="" selected>Select Country</option>
                            <option value="India">India</option>
                            <option value="US">US</option>
                        </select> -->
                    </div>

                    <div class="col-md-4 mb-3">
                        <input type="text" class="form-control" name="state" id="state"
                        value="<%= customer ? customer.state : ""%>"   placeholder="Enter State" required>
                        <!-- <select name="state" id="" class="form-control" required>
                            <option value="" selected>Select State</option>
                            <option value="Delhi">Delhi</option>
                            <option value="Uttar Pradesh">Uttar Pradesh</option>
                            <option value="Panjab">Panjab</option>
                            <option value="Haryana">Haryana</option>
                        </select> -->
                    </div>

                    <div class="col-md-4 mb-3">
                        <input type="text" class="form-control" name="pincode" id="pincode" value="<%= customer ? customer.pincode : ""%>" placeholder="Enter Pin Code"
                            required>
                    </div>

                    <div class="col-md-4 mb-3">
                        <input class="form-control" type="text" id="phone" name="phone" value="<%= customer ? customer.phone : ""%>" placeholder="Enter Phone No."
                            required>
                    </div>

                    <div class="col-md-4 mb-3">
                        <input class="form-control" type="text" id="mobile" name="mobile" value="<%#= customer ? customer.mobile : ""%>" placeholder="Enter Mobile No."
                            required>
                    </div>

                    <!-- <div class="col-md-4 mb-3">
                        <input class="form-control" type="text" id="fax" name="fax" value="<%= customer ? customer.fax : ""%>" placeholder="Enter Fax No."
                            required>
                    </div> -->

                    <div class="col-md-4 mb-3">
                        <input class="form-control" type="email" id="email" name="email"
                        value="<%= customer ? customer.email : ""%>"  placeholder="Enter Email" required>
                    </div>

                    <!-- <div class="col-md-6 mb-3">
                        <input class="form-control" type="email" id="email2" name="email2"
                        value="<%#= customer ? customer.email2 : ""%>"   placeholder="Enter Email ID-2" required>
                    </div> -->

                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-warning px-4">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>