
<div class="card">
  <div class="card-header py-2">
    <h5 class="mb-0">Customer Enquiry</h5>
  </div>
  <div class="card-body">
    <div class="d-flex justify-content-end mb-3">
      <div class="d-flex align-items-center">
        <label for="search" class="mt-1 mr-1">Search: </label>
        <input
          type="text"
          class="form-control form-control-sm"
          placeholder="Search.."
        />
      </div>
    </div>
    
    <form action="/admin/customer/findcust" class="row">
      <div class="col-12 d-flex mb-3 justify-content-between">
        <select name="id" id="id" class="form-control">
          <% custDetails.forEach(data=>{ %>
            <option value="<%= data._id %>"><%= data.customer %> (<%= data.customerName %>)</option>
            <% }) %> 
        </select>

        <button class="btn btn-dark ml-3 px-4">Find</button>
      </div>
    </form>
  </div>
</div>


